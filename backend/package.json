{
  "name": "salestra-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Salestra AI automation SaaS - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/bundle.js --packages=external && node dist/bundle.js",
    "dev:tsx": "tsx watch --tsconfig tsconfig.json src/index.ts",
    "dev:v25": "swc src -d dist --strip-leading-paths --watch --config-file .swcrc & node --watch dist/index.js",
    "build": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/bundle.js --packages=external",
    "start": "node dist/bundle.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@prisma/client": "^6.1.0",
    "@qdrant/js-client-rest": "^1.11.0",
    "@types/nodemailer": "^7.0.5",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "groq-sdk": "^0.37.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "openai": "^4.77.3",
    "prom-client": "^15.1.3",
    "razorpay": "^2.9.6",
    "uuid": "^11.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.27.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3"
  }
}
