# Database
DATABASE_URL="postgresql://user:password@localhost:5432/salestra_dev?connection_limit=20&pool_timeout=20"

# Redis
REDIS_URL="redis://localhost:6379"

# Qdrant Vector Store
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""

# Evolution API (WhatsApp)
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_API_KEY="your-evolution-api-key"

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# Groq (Ultra-fast inference)
GROQ_API_KEY=""

# Ollama (Local LLM)
OLLAMA_HOST="http://localhost:11434"
OLLAMA_CHAT_MODEL="llama3.1:8b"

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER="groq"  # groq | openai | ollama
FALLBACK_LLM_PROVIDER="ollama"
ENABLE_LLM_FALLBACK=true

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"
BACKEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_SECRET="your-webhook-signing-secret-min-32-chars-long-please"

# Proxy Settings (set to true if behind nginx/load balancer)
TRUST_PROXY=false

# ============================================
# PRODUCTION HARDENING FEATURE FLAGS
# ============================================

# Circuit Breaker - prevents cascading failures
ENABLE_CIRCUIT_BREAKER=true

# Dead Letter Queue - captures permanently failed messages
ENABLE_DLQ=true

# Caching Layer - Redis-backed caching for performance
ENABLE_CACHING=true

# Metrics Collection - for monitoring dashboards
ENABLE_METRICS=true

# Legacy Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true

